{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./types",
    "paths": {
      "markdown-it/lib/rules_block/*": [
        "markdown-it/lib/rules_block/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tests",
    "demo"
  ]
}